# ============================================
# CORE APPLICATION
# ============================================
ENVIRONMENT=development
PORT=8080

# ============================================
# AUTHENTICATION
# ============================================
JWT_SECRET=your-jwt-secret-change-in-production
REFRESH_SECRET=your-refresh-secret-change-in-production

# ============================================
# DATABASE
# ============================================
# PostgreSQL (Primary DB)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DATABASE=nft_marketplace

# MongoDB (Media/Indexer)
MONGO_URI=mongodb://localhost:27017
MONGO_DATABASE=nft_marketplace

# Redis (Cache)
REDIS_HOST=localhost
REDIS_PORT=6379

# ============================================
# MESSAGE QUEUE
# ============================================
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest
RABBITMQ_EXCHANGE=nft-marketplace

# ============================================
# BLOCKCHAIN RPC
# ============================================
# Testnet
ETH_SEPOLIA_RPC=https://sepolia.infura.io/v3/your-infura-key

# Local Development
ANVIL_RPC=http://localhost:8545

# ============================================
# STORAGE (IPFS/Pinata)
# ============================================
PINATA_API_KEY=your-pinata-api-key
PINATA_SECRET_KEY=your-pinata-secret-key
PINATA_JWT_KEY=your-pinata-jwt-key

# ============================================
# SERVICES PORTS (gRPC)
# ============================================
AUTH_GRPC_PORT=50051
USER_GRPC_PORT=50052
WALLET_GRPC_PORT=50053
ORCHESTRATOR_GRPC_PORT=50054
MEDIA_GRPC_PORT=50055
CHAIN_REGISTRY_GRPC_PORT=50056
CATALOG_GRPC_PORT=50057
INDEXER_GRPC_PORT=50058

# GraphQL Gateway
GATEWAY_HTTP_ADDR=8081

# ============================================
# MONITORING (Optional)
# ============================================
# Sentry
SENTRY_DSN=
SENTRY_ENVIRONMENT=development
